{
    "name": "@kedoska/engine-slot",
    "version": "0.0.0",
    "description": "A library to build slot machines",
    "scripts": {
        "test": "jest",
        "coverage": "jest --coverage",
        "build": "tsc",
        "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.js\"",
        "lint": "tslint -p tsconfig.json"
    },
    "keywords": [],
    "author": "Marco Casula <marco.casula@gmail.com>",
    "license": "GPL-2.0",
    "devDependencies": {
        "@types/jest": "^24.0.24",
        "jest": "^24.9.0",
        "prettier": "^1.19.1",
        "ts-jest": "^24.2.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.4"
    },
    "jest": {
        "roots": [
            "<rootDir>"
        ],
        "modulePathIgnorePatterns": [
            "<rootDir>/dist/"
        ],
        "testMatch": [
            "**/tests/**/*.+(ts|tsx|js)",
            "**/?(*.)+(spec|test).+(ts|tsx|js)"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        }
    }
}
